<UserControl x:Class="PhazaAudioPlayer.Views.UserControls.FilesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:PhazaAudioPlayer.Views.UserControls"
             xmlns:viewModels="clr-namespace:PhazaAudioPlayer.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">

    <UserControl.DataContext>
        <viewModels:FilesUserControlViewModel/>
    </UserControl.DataContext>

    <UserControl.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Delete" Executed="RemoveTrack"/>
    </UserControl.CommandBindings>
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="96"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            Margin="5, 5">
            
            <Button 
                hc:Poptip.Content="Добавить каталог с аудиофайлами"
                hc:Poptip.HitMode="Hover"
                hc:Poptip.Placement="TopLeft"
                Margin="30,10,10,10"
                Width="48"
                Height="48"
                Template="{StaticResource AddFolderButtonTemplate}"
                Command="{Binding AddDirectoryCommand}"/>

            <Button 
                hc:Poptip.Content="Добавить аудиофайлы"
                hc:Poptip.HitMode="Hover"
                hc:Poptip.Placement="Top"
                Margin="10"
                Width="48"
                Height="48"
                Template="{StaticResource AddFileButtonTemplate}"
                Command="{Binding AddFilesCommand}"/>

            <Button
                hc:Poptip.Content="Обновить аудиофайлы"
                hc:Poptip.HitMode="Hover"
                hc:Poptip.Placement="TopRight"
                Margin="10"
                Width="48"
                Height="48"
                Template="{StaticResource RefreshButtonTemplate}"
                Command="{Binding RefreshDirectoriesCommand}"/>
            
        </StackPanel>

        <hc:ScrollViewer
            Grid.Row="1"
            IsInertiaEnabled="True">

            <ItemsControl 
                ItemsSource="{Binding UserTracks}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <StackPanel 
                        Orientation="Horizontal"
                        Style="{StaticResource DirectoryItemStyle}">

                            <Button 
                            Margin="20,5,20,5"
                            Width="32"
                            Height="32"
                            VerticalAlignment="Center"
                            Template="{StaticResource PlayButtonTemplate}"/>

                            <TextBlock 
                            Margin="5"
                            Text="{Binding Name}"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Normal"/>

                            <Button
                                x:Name="RemoveButton"
                                Grid.Column="2"
                                Margin="20,5,20,5"
                                Opacity="0"
                                VerticalAlignment="Center"
                                Width="32"
                                Height="32"
                                Template="{StaticResource DeleteButtonTemplate}"
                                Command="{x:Static ApplicationCommands.Delete}"
                                CommandParameter="{Binding Path=DataContext, RelativeSource={RelativeSource Mode=Self}}"/>

                        </Grid>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>

        </hc:ScrollViewer>
        
    </Grid>
</UserControl>
