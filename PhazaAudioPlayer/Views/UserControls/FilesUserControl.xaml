<UserControl x:Class="PhazaAudioPlayer.Views.UserControls.FilesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:PhazaAudioPlayer.Views.UserControls"
             xmlns:viewModels="clr-namespace:PhazaAudioPlayer.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">

    <UserControl.DataContext>
        <viewModels:FilesUserControlViewModel/>
    </UserControl.DataContext>

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            Margin="5, 5">
            
            <Button 
                Content="Добавить каталог"
                Margin="5"
                Command="{Binding AddDirectoryCommand}"/>

            <Button 
                Content="Добавить аудиофайлы"
                Margin="5"
                Command="{Binding AddFilesCommand}"/>

            <Button
                Content="Обновить"
                Margin="5"
                Command="{Binding RefreshDirectoriesCommand}"/>
            
        </StackPanel>

        <hc:ScrollViewer
            Grid.Row="1"
            IsInertiaEnabled="True">

            <ItemsControl 
                ItemsSource="{Binding UserTracks}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <StackPanel 
                        Orientation="Horizontal"
                        Style="{StaticResource DirectoryItemStyle}">

                            <Button 
                            Margin="20,5,20,5"
                            Width="32"
                            Height="32"
                            VerticalAlignment="Center"
                            Template="{StaticResource PlayButtonTemplate}"/>

                            <TextBlock 
                            Margin="5"
                            Text="{Binding Name}"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Normal"/>

                        </StackPanel>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>

        </hc:ScrollViewer>
        
    </Grid>
</UserControl>
